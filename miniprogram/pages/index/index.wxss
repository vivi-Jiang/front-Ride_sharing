/* pages/carpoolList/carpoolList.wxss */
.container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding: 16px;
}

.loading-tip {
  text-align: center;
  color: #999;
  padding: 20px;
  font-size: 14px;
}

.empty-tip {
  text-align: center;
  color: #666;
  padding: 20px;
  font-size: 16px;
}

.list-container {
  height: calc(100vh - 32px); /* 减去上下padding */
}

.carpool-item {
  background: white;
  border-radius: 12px;
  padding: 16px;
  margin-bottom: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
  display: flex;
  justify-content: space-between;
  align-items: center;
  cursor: pointer;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-right: 16px;
}

.avatar {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  object-fit: cover;
}

.username {
  font-size: 12px;
  color: #666;
  margin-top: 4px;
}

.route-info {
  flex: 1;
}

.route-line {
  display: flex;
  align-items: center;
  margin-bottom: 8px;
}

.departure, .destination {
  font-size: 16px;
  font-weight: 500;
  color: #333;
}

.arrow {
  width: 20px;
  height: 20px;
  margin: 0 8px;
}

.date {
  font-size: 12px;
  color: #999;
  margin-bottom: 8px;
}

.type-tag {
  display: inline-block;
  padding: 2px 8px;
  border-radius: 10px;
  font-size: 12px;
  font-weight: 500;
}
.create-btn {
  position: fixed;
  bottom: 32px;
  left: 50%;
  transform: translateX(-50%);
  background: #1677ff;
  color: white;
  height: 52px;
  border-radius: 26px;
  padding: 0 24px;
  display: flex;
  align-items: center;
  box-shadow: 0 4px 12px rgba(22, 119, 255, 0.3);
}

.create-btn::after {
  border: none;  /* 去除默认边框 */
}

.create-icon {
  width: 20px;
  height: 20px;
  margin-right: 8px;
}